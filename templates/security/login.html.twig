{% extends 'base.html.twig' %}

{% block content %}
    <div class="container-fluid login relpos">

        <div class="login-form-container">

            <form action="{{ path('login') }}" method="post" class="text-center">
                <input type="text" class="form-control my-1" id="username" name="_username" placeholder="Email" value="{{ last_username }}" />
                <input type="password" class="form-control my-1" id="password" name="_password" placeholder="Mot de passe"/>
                {#<input type="hidden" name="_target_path" value="/account" />#}
                <button type="submit" class="my-2 login-button pointer">Se connecter</button>
            </form>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <div class="text-center">
                <a class="text-white" href="{{ path('user_registration') }}">Pas de compte ? Cliquez ici !</a><br>
                <a class="text-white" href="{{ path('forgot_password') }}">Mot de passe oubli√©</a>
            </div>
        </div>


    </div>


{% endblock %}