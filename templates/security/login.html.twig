{% extends 'base.html.twig' %}

{% block content %}
    <div class="container-fluid login relpos">

        <div class="login-form-container">

            <form action="{{ path('login') }}" method="post" class="text-center">
                {% if lg == 'fr' %}
                    <input type="text" class="form-control my-1" id="username" name="_username" placeholder="Email" value="{{ last_username }}" />
                    <input type="password" class="form-control my-1" id="password" name="_password" placeholder="Mot de passe"/>
                    <button type="submit" class="my-2 login-button pointer">Se connecter</button>
                {% elseif lg =='en' %}
                    <input type="text" class="form-control my-1" id="username" name="_username" placeholder="Email" value="{{ last_username }}" />
                    <input type="password" class="form-control my-1" id="password" name="_password" placeholder="Password"/>
                    <button type="submit" class="my-2 login-button pointer">Login</button>
                {% endif %}

            </form>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <div class="text-center">
                <a class="text-white font-weight-bold" href="{{ path('user_registration') }}">
                    {% if lg == 'fr' %}
                        Pas de compte ? Cliquez ici !
                    {% elseif lg =='en' %}
                        Don't have an account ? Click here !
                    {% endif %}

                </a><br>
                <a class="text-white font-weight-bold" href="{{ path('forgot_password') }}">
                    {% if lg == 'fr' %}
                        Mot de passe oubli√©
                    {% elseif lg =='en' %}
                        I forgot my password
                    {% endif %}
                </a>
            </div>
        </div>


    </div>


{% endblock %}