        <h1 class="text-center p-3">Mes commandes</h1>
        {% for order in orders %}
        <div class="row w-75 m-auto text-center">
            <div class="col"><a href="{{ path('order_content', { 'id': order.id }) }}">Commande nÂ°{{ order.id }}</a></div>
