{% extends 'base.html.twig' %}

{% block content %}
    <div class="register1 p-5">
        <div class="container text-center">
            {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    {{ form_row(form.civility) }}
                </div>
                <div class="col">
                    {{ form_row(form.addressStreet) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.lastName) }}
                </div>
                <div class="col">
                    {{ form_row(form.addressZipCode) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col">
                    {{ form_row(form.addressCity) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.email) }}
                </div>
                <div class="col">
                    {{ form_row(form.addressCountry) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.plainPassword.first) }}
                </div>
                <div class="col">
                    {{ form_row(form.plainPassword.second) }}
                </div>
            </div>

            <button type="submit">S'inscrire</button>
            {{ form_end(form) }}
        </div>
        <div class="text-center">
            <a class="text-white" href="{{ path('login') }}">Si vous êtes déjà membre, cliquez ici.</a>
        </div>
    </div>
    <div class="register2">
        <div class="relpos">
            <div class="center-div text-white edwardian" style="font-size: 3em">
                De nos celliers à vos caves
            </div>
        </div>
        <div class="relpos">
            <div class="center-div font-weight-bold text-white segoe fs-1">
                LIVRAISON A DOMICILE
            </div>
        </div>
        <div class="relpos">
            <div class="center-div text-white text-center fs-1">
                Bénéficiez d'un service personnalisé pour</br>vous et pour vos proches
            </div>
        </div>
    </div>
    <div class="register3">
        <div class="relpos">
            <div class="center-div edwardian" style="font-size: 3em">
                Des expériences uniques
            </div>
        </div>
        <div class="relpos">
            <div class="center-div font-weight-bold segoe fs-1">
                Suivez nous au fil des saisons
            </div>
        </div>
        <div class="relpos">
            <div class="center-div text-center fs-1">
                Tenez vous informé
            </div>
        </div>
    </div>




{% endblock %}