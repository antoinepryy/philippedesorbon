{% extends 'base.html.twig' %}

{% block meta %}
<title>Nos Champagnes</title>
<meta name="description" content="Découvrez l'ensemble de nos produits, élaborés avec soin pour
votre seul bonheur">
{% endblock %}

{% block content %}

        <div class="champagnes-slide1"></div>
        <nav id="champagnes-nav" class="sticky-nav-sec z-index-nav-sec">
            <ul class="champagnes-list justify-content-around">
                {% for cuvee in champagnes %}
                    <li class="px-3"><a href="{{ path('champagne_show', {'id' : cuvee.UrlLink}) }}">{{ cuvee.name }}</a></li>
                {%  endfor %}
            </ul>
        </nav>
        <div class="container-fluid text-center my-4">
            <div class="segoe font-weight-bold active my-5 fs-14">
                {% if lg == 'fr' %}
                    "IL EST DIFFICILE DE NE PAS DECRIRE AVEC ENTHOUSIASME<br>
                    CE QUE L’ON ÉLABORE AVEC AMOUR"
                {% elseif lg =='en' %}
                    "IT IS DIFFICULT TO NOT DESCRIBE WITH ENTHUSIASM<br>
                    WHAT WE DEVELOP WITH LOVE"
                {% endif %}

            </div>
            <div class="edwardian active my-2 fs-17 w-75 ml-auto">Martine Wallaert</div>
        </div>


        {{ render(controller(
            'App\\Controller\\DefaultController::showBottles'
        )) }}

        <div class="container-fluid text-center my-4">

            <div class="egoe font-weight-bold active my-5 fs-14">
                {% if lg == 'fr' %}
                    "QUI BOIT DU CHAMPAGNE ACQUIERT UN SUPPLEMENT D'ÂME"
                {% elseif lg =='en' %}
                    "WHOEVER DRINKS CHAMPAGNE ACQUIRES AN EXTRA SOUL."
                {% endif %}

            </div>
            <div class="edwardian active my-2 fs-17 w-75 ml-auto">Madame de Pompadour</div>
        </div>
        <div class="champagnes-slide2">


        </div>



{% endblock %}
