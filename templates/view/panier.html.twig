{% extends 'base.html.twig' %}

{% block content %}
    <div id="get-cart" data-path="{{path('get_cart')}}"></div>
    <div id="pre-order" data-path="{{path('pre_order')}}"></div>
    <div id="add-product" data-path="{{path('add_product')}}"></div>
    <div id="remove-one" data-path="{{path('remove_one_product')}}"></div>
    <div id="remove-all" data-path="{{path('remove_all_products')}}"></div>
    <div class="bg-black text-center">

        <h1 class="edwardian text-white py-3" style="font-size: 3.5em">Votre Panier</h1>
        <div class="container">
            <div id="empty-cart" class="segoe text-white fs-16 text-center pb-5" style="display: none;">
                Votre panier est vide
            </div>
            <div id="cart-section">
                <div class="row segoe text-white py-2" style="border-top: 1px solid #CEBB97;border-bottom:  1px solid #CEBB97;">
                    <div class="col-3">
                        ARTICLES
                    </div>
                    <div class="col-3">
                        QUANTITE
                    </div>
                    <div class="col-2">
                        PRIX
                    </div>
                    <div class="col-2">
                        PRIX TOTAL
                    </div>
                    <div class="col-2">
                        SUPPRIMER
                    </div>
                </div>
                {% for champagne in champagneClassique %}
                    <div id="champagne-{{ champagne.id }}" class="row segoe text-white py-4 middle-div" style="display: none;">
                        <div class="col-3" style="display: flex">
                            <div class="w-50">
                                <img style="height: 60px; border: 1px solid black; border-radius: 10px;" src="{{ asset("ressource/uploads/") ~ champagne.photoBouteille  }} " alt="presentation of the bottle or food that can be associated with">
                            </div>
                            <div style="width:50%;display:flex;justify-content:center;align-items:center;">
                                {{ champagne.name|upper }}
                            </div>
                        </div>
                        <div class="col-3" style="display: inline-flex; justify-content: space-around">
                            <div class="pointer third-width h-100 remove-one-button" id="{{ champagne.id }}">
                                -
                            </div>
                            <div class="quantity third-width h-100" id="quantity-{{ champagne.id }}">
                            </div>
                            <div class="pointer third-width h-100 add-button" id="{{ champagne.id }}">
                                +
                            </div>
                        </div>
                        <div class="col-2">
                            <span id="price-{{ champagne.id }}">{{ champagne.price|number_format(2) }}</span> &euro;
                        </div>
                        <div class="col-2">
                            <span class="total-price" id="total-price-{{ champagne.id }}"></span> &euro;
                        </div>
                        <div class="col-2 pointer remove-all-button" id="{{ champagne.id }}">
                            X
                        </div>
                    </div>
                {% endfor %}
                {% for champagne in champagneCollection %}
                    <div id="champagne-{{ champagne.id }}" class="row segoe text-white py-4 middle-div shop-animate-all" style="display: none;">
                        <div class="col-3" style="display: flex">
                            <div class="w-50">
                                <img style="height: 60px; border: 1px solid black; border-radius: 10px;" src="{{ asset("ressource/uploads/") ~ champagne.photoBouteille  }} " alt="presentation of the bottle or food that can be associated with">
                            </div>
                            <div style="width:50%;display:flex;justify-content:center;align-items:center;">
                                {{ champagne.name|upper }}
                            </div>
                        </div>
                        <div class="col-3" style="display: inline-flex; justify-content: space-around">
                            <div class="pointer third-width h-100 remove-one-button" id="{{ champagne.id }}">
                                -
                            </div>
                            <div  class="quantity third-width h-100" id="quantity-{{ champagne.id }}">
                            </div>
                            <div class="pointer third-width h-100 add-button" id="{{ champagne.id }}">
                                +
                            </div>
                        </div>
                        <div class="col-2">
                            <span id="price-{{ champagne.id }}">{{ champagne.price|number_format(2) }}</span> &euro;
                        </div>
                        <div class="col-2">
                            <span class="total-price" id="total-price-{{ champagne.id }}"></span> &euro;
                        </div>
                        <div class="col-2 pointer remove-all-button" id="{{ champagne.id }}">
                            X
                        </div>
                    </div>
                {% endfor %}



            </div>
        </div>
    </div>
    <div id="cart-recap" style="background-color: black">
        <div>
            <div class="container p-3">
                <div class="row segoe text-white py-2">
                    <div class="col-3">

                    </div>
                    <div class="col-3">

                    </div>
                    <div class="col-2">

                    </div>
                    <div class="col-2 text-center">
                        <div class="segoe fs-1">SOUS-TOTAL</div>
                        <div class="segoe fs-08" style="opacity: 0.5;">TVA INCLUSE 20%</div>
                        <div class="segoe fs-1">FRAIS DE LIVRAISON</div>
                    </div>
                    <div class="col-2 text-center">
                        <div class="segoe fs-1"><span id="sous-total"></span> &euro;</div>
                        <div class="segoe fs-08" style="opacity: 0;">void</div>
                        <div class="segoe fs-1"><span id="livraison">0,00</span> &euro;</div>
                    </div>
                </div>
                <div class="row segoe text-white py-2" style="border-top: 1px solid dimgrey; border-bottom: 1px solid dimgrey">
                    <div class="col-3">

                    </div>
                    <div class="col-3">

                    </div>
                    <div class="col-2">

                    </div>
                    <div class="col-2 text-center">
                        <div class="segoe fs-1">TOTAL</div>
                    </div>
                    <div class="col-2 text-center">
                        <div class="segoe fs-1"><span id="total-all"></span> &euro;</div>
                    </div>
                </div>
            </div>

        </div>
        <div class="p-5">
            <a class="no-decoration p-2" href="{{ path('user_registration') }}" style="border: 1px solid #BA55D3; color: #BA55D3; opacity: 0.5; margin-left: 75%;">COMMANDER</a>
        </div>
    </div>




{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/panier.js') }}"></script>
{% endblock %}