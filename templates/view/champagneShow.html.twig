{% extends 'base.html.twig' %}

{% block content %}

    <div class="bg-without-url" style="background-image:url('{{ asset("ressource/uploads/") ~ champagne.photo1  }} ');">

    </div>
    <div class="container text-center my-5">
        <h1 class="segoe active">{{ champagne.name|upper }}</h1>
        <h2 class="edwardian active">{{ champagne.subtitle1 }}</h2>
        <p>
            {{ champagne.presentation1 }}
        </p>
    </div>
    <div class="bg-without-url" style="background-image:url('{{ asset("ressource/uploads/") ~ champagne.photo2  }} ');">

    </div>
    <div class="container">
        <div class="row my-5">
            <div class="col text-center">
                <h3 class="active segoe">{{ champagne.subtitle21|upper }}</h3>
                <p class="segoe">
                    {{ champagne.presentation21|nl2br }}
                </p>
            </div>
            {% if champagne.subtitle22|upper %}
            <div class="col text-center">
                <h3 class="active segoe">{{ champagne.subtitle22|upper }}</h3>
                <p class="segoe">
                    {{ champagne.presentation22|nl2br }}
                </p>
            </div>
            {% endif %}
            {% if champagne.subtitle23|upper %}
            <div class="col text-center">
                <h3 class="active segoe">{{ champagne.subtitle23|upper }}</h3>
                <p class="segoe">
                    {{ champagne.presentation23|nl2br }}
                </p>
            </div>
            {% endif %}
        </div>
        {% if champagne.subtitle3 %}
        <div class="text-center my-4">
            <span class="segoe active fs-10 font-weight-bold">{{ champagne.subtitle3|upper }}</span>
        </div>
        {% endif %}
    </div>
    {% if champagne.photo3 %}
    <div class="bg-without-url" style="background-image:url('{{ asset("ressource/uploads/") ~ champagne.photo3  }} ');">

    </div>
    {% endif %}

    <div class="container py-5">
        <div class="row">
            <div class="col text-center">
                <div>
                    <h3 class="segoe active">{{ champagne.subtitle4|upper }}</h3>
                    <p class="segoe">
                        {{ champagne.presentation4|nl2br }}
                    </p>
                </div>

            </div>
            {% if champagne.photoParagraph1 %}
                <div class="col">
                    <img style="height: auto; width: auto" src="{{ asset("ressource/uploads/") ~ champagne.photoParagraph1  }} " alt="presentation of the bottle or food that can be associated with">
                </div>
            {% endif %}
        </div>
    </div>

    {% if champagne.photo4 %}
        <div class="bg-without-url" style="background-image:url('{{ asset("ressource/uploads/") ~ champagne.photo3  }} ');">

        </div>
    {% endif %}

    <div class="container py-5">
        <div class="row">
            <div class="col text-center">
                <div>
                    <h3 class="segoe active">{{ champagne.subtitle5|upper }}</h3>
                    <p class="segoe">
                        {{ champagne.presentation5|nl2br }}
                    </p>
                </div>

            </div>
            {% if champagne.photoParagraph2 %}
            <div class="col">
                    <img style="height: auto; width: auto" src="{{ asset("ressource/uploads/") ~ champagne.photoParagraph2  }} " alt="presentation of the bottle or food that can be associated with">
            </div>
            {% endif %}
        </div>
    </div>
    <div>
        {{ render(controller(
            'App\\Controller\\DefaultController::showBottles'
        )) }}
    </div>


{% endblock %}
